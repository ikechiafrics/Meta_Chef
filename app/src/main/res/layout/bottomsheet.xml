<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:text="Filter"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/coloDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDiets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diets"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkGluten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gluten Free" />

            <CheckBox
                android:id="@+id/checkVegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegetarian" />

            <CheckBox
                android:id="@+id/checkVegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vegan" />

            <CheckBox
                android:id="@+id/checkKetogenic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketogenic" />

            <CheckBox
                android:id="@+id/checkWhole30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whole30" />


            <TextView
                android:id="@+id/tvSort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sort"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkPopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popularity" />

            <CheckBox
                android:id="@+id/checkPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <CheckBox
                android:id="@+id/checkCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories" />

            <TextView
                android:id="@+id/tvMaxCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maximum Calories"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMaxCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max of 800" />

            <TextView
                android:id="@+id/tvMinCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimum Calories"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMinCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Min of 50" />

            <TextView
                android:id="@+id/tvSortDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sort"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkAscending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ascending" />

            <CheckBox
                android:id="@+id/checkDescending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descending" />

            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>