<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_description"
        android:layout_width="296dp"
        android:layout_height="73dp"
        android:layout_marginStart="2dp"
        android:maxLines="4"
        android:text="this id the description of the item"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_image"
        app:layout_constraintTop_toBottomOf="@+id/search_title"
        app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/search_title"
        android:layout_width="237dp"
        android:layout_height="35dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="Hi, My name is ikechi"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_image"
        app:layout_constraintTop_toTopOf="@id/search_image" />

    <ImageView
        android:id="@+id/search_image"
        android:layout_width="105dp"
        android:layout_height="122dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/search_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>