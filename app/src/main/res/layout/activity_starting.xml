<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F2684"
    tools:context=".StartingActivity">

    <ImageView
        android:id="@+id/ivImageLogo"
        android:layout_width="189dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="185dp"
        app:srcCompat="@drawable/project_logo" />

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageLogo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="76dp"
        android:text="Enjoy Your Meal!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="44sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="196dp"
        android:layout_height="56dp"
        android:layout_below="@+id/tvMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#8239DF"
        android:text="Get Started"
        app:cornerRadius="15dp" />

</RelativeLayout>

